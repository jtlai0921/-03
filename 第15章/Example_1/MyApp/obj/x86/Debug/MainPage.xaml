<Page
    x:Class="MyApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <TextBox x:ConnectionId='1' Name="txtInput" Height="100" TextWrapping="Wrap"/>
        <Button x:ConnectionId='2' Margin="0,15,0,10" Content="點擊這裡，開始識別"                 HorizontalAlignment="Stretch"/>
        <TextBlock x:ConnectionId='3' Name="tbDisplay" FontSize="16" Margin="3,13,0,0" Foreground="Yellow"/>
    </StackPanel>
</Page>

